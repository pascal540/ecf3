{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}
{% block body %}
{% form_theme formEvent 'bootstrap_5_layout.html.twig'  %}
{% form_theme formActue 'bootstrap_5_layout.html.twig'  %}
<div class="container w-75 bg-light">
	<div class="row custom-line-contact">
		<div class="container text-center col-6">
			{{ form_start(formEvent) }}

			{{form_row(formEvent.title,{'label':'Titre de l\'évènement','attr':{'placeholder':'Titre de l\'evenement'}})}}
			{{form_row(formEvent.content,{'label':'Contenu de votre évènement','attr':{'placeholder':'Contenu de l\'évènement '}})}}
			{{form_row(formEvent.file,{'label':'Fichier de l\'image à charger','attr':{'placeholder':'image à Uploader'}})}}

			<button type="submit" class="btn btn-success">Ajouter</button>
			</button>

			{{ form_end(formEvent) }}
		</div>
		<div class="container text-center col-6">
			{{ form_start(formActue) }}
			{{form_row(formActue.title,{'label':'Titre de l\'actualité','attr':{'placeholder':'Titre de l\'actualité'}})}}
			{{form_row(formActue.content,{'label':'Contenu de votre actualité','attr':{'placeholder':'Contenu de l\'actualité '}})}}
			{{form_row(formActue.file,{'label':'Fichier de l\'image à charger','attr':{'placeholder':'image à Uploader'}})}}

			<button type="submit" class="btn btn-success">Ajouter</button>
			</button>

			{{ form_end(formActue) }}
		</div>
	</div>
</div>{% endblock %}