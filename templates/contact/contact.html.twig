{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig'  %}
{% block body %}

<style>
    .nomContact,
    .prenomContact,
    .telContact,
    .mailContact {
        background-color: antiquewhite
            /*Vert*/
    }

    .textareaContact {
        background-color: bisque
    }
</style>
{% block stylesheets %}

{% endblock %}
<div class="container w-75 mt-3  mb-5 bg-light">

    <div class="row custom-line-contact">

        <div class="row">

            <div class="col-4">

                {{ form_start(form) }}

                {{form_row(form.nom,{'attr':{'placeholder':'Votre nom'},
        })}}

                {{form_row(form.prenom,{'attr':{'placeholder':'Votre prenom'}})}}
                {{form_row(form.telephone,{'attr':{'placeholder':'Votre Telephone'}})}}
                {{form_row(form.email,{'attr':{'placeholder':'Votre email'}})}}
                {{form_row(form.content,{'attr' :{'placeholder':'Votre message'}})}}
            </div>

            <div class="col-4 text-center">
                <h4>Localisation</h4>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d21062.371036109605!2d6.125700834491379!3d48.70937274256358!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4794a2b2ed613bd9%3A0xbfcf2b2c3c4ac371!2sMax%C3%A9ville!5e0!3m2!1sfr!2sfr!4v1643027176747!5m2!1sfr!2sfr"
                    width="400" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>

            <div class="col-4">
                <h4 class="text-center">Meteo</h4>
                <div class="container  d-flex justify-content-center mt-5">
                    <iframe id="widget_autocomplete_preview" width="350" height="320" frameborder="0"
                        src="https://meteofrance.com/widget/prevision/543570"> </iframe>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-4">
            {{form_row(form.captchaCode)}}
        </div>
    </div>
    <div class=" text-center col-4" <div class=" row">
        <button type="submit" class="btn btn-success    ">Soumettre votre demande</button>
    </div>

    {{ form_end(form) }}

</div>


</div>
{% endblock %}