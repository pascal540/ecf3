{% extends 'base.html.twig' %}

{% block title %}Actualites de notre village
{% endblock %}

{% block body %}

	<div class="container ">

		<div class="row justify-content-center">

			{% for actualite  in actualites %}
				{% set i = i + 1 %}

				<div class="accordion  col-6 mt-5 " id="accordionExample">

					<div class="accordion-item">
						<h2 class="accordion-header" id="headingOne">
							<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{i}}" aria-expanded="true" aria-controls="collapseOne">
								{{ actualite.title}}
								{{ actualite.createdAt | date('d/m/y')}}
								à
								{{ actualite.createdAt | date('H:i')}}
							</button>


						</h2>
						<div id="collapse{{i}}" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
							<div class="accordion-body">
								<strong>{{ actualite.title}}.</strong>
								{{ actualite.content}}
								<div class="metadata">Ecrit le
									{{ actualite.createdAt | date('d/m/y')}}
									à
									{{ actualite.createdAt | date('H:i')}}
								</div>
								<img src="{{ actualite.file}}" alt="">
							</div>
							{% if app.user %}
								<div class="container ">
									<button class="btn btn-danger" type="button" id="{{actualite.id}}">
										<a class="nav-link text-info" href="{{ path('actue_modifie ') }}">Modifier</a>


									</button>
								</div>

							{% endif %}

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
